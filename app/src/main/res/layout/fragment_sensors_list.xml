<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgroundpic"> <!-- Utilisation de l'image comme fond -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Sensors List"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_con"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <!-- ListView with vertical scrollbar enabled -->
    <ListView
        android:id="@+id/listViewSensors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>
</LinearLayout>
