<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/backgroundpic">

    <androidx.cardview.widget.CardView
        android:id="@+id/proximityCardView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="6dp"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:fontFamily="@font/roboto_con">

            <TextView
                android:id="@+id/proximityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move an object near the sensor!"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:fontFamily="@font/roboto_con"/>

            <ImageView
                android:id="@+id/proximityImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_far"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
